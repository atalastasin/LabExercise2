<p style="color: green"><%= notice %></p>

<% content_for :title, "Subjects" %>

<h1>List of Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name%></td>
        <td><%= subject.teacher.name%></td>
        <td><%= link_to "Show this subject", subject %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New subject", new_subject_path %>
